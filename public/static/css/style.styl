.slider
    display flex
    flex-wrap wrap
    margin-top 24px
    min-height 522px
    width 100%
    overflow-x: hidden
    position relative
    ul.navigation
        display block
        width 100%
        margin 0px
        padding 0px
        position absolute
        top calc(50% - 18px)
        overflow hidden
        z-index 2
        li
            display inline-flex
            float left
            a
                color white
                background-color rgba(0,0,0, .5)
                align-items center
                justify-content center
                height: 36px
                width 36px
                display: flex
                border-radius 50%
                text-decoration: none
                font-size: 1.4em
            &:first-child
                margin-left: 16px
                a
                    i
                        position relative
                        margin-left -2px
                        margin-top 2px
            &:last-child
                margin-right: 16px
                float right
                a
                    i
                        position relative
                        margin-left 2px
                        margin-top 2px


    .slider-item
        border 1px solid white
        align-items center
        display none
        min-height 522px
        border-radius 4px
        background-color white
        color rgb(0, 0, 0)
        font-size 4em
        justify-content center
        position absolute
        width 100% !important
        min-height 380px
        transition: .4s all ease-in-out
        .col-md-7
            padding 0px
        .row
            margin 0px
        .content
            align-items center
            display flex
            justify-content center
            color #333
            height 100%
            h2
            p
                display block
                text-align center


