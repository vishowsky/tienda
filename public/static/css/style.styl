.products_list
    display block
    margin-top 32px
    overflow hidden
    width 100%
    padding 0px
    .product
        display inline-block
        width 18%
        float left
        margin-bottom 16px
        margin-right 2.4%
        &:nth-child(5n)
            margin-right 0px
        .image
            display block
            width 100%
            position relative
            overflow hidden
            .overlay
                position absolute
                background-color rgba(0,0,0, .5)
                display none
                flex 1
                height 100%
                position absolute
                width 100%
                z-index 9
                border-radius 4px
                transition .3s all ease-in-out
                .btns
                    position absolute
                    display block
                    width 94%
                    bottom 8px
                    overflow hidden
                    left 3%
                    a
                        float left
                        box-sizing border-box
                        border-radius 4px
                        font-size 1.2em
                        padding 6px
                        text-align center
                        width 32%
                        background-color white
                        color red
                        margin-right 2%
                        &:last-child
                            margin-right 0px
            img
                display block
                width 100%
                border-radius 4px
                transform scale(1)
                transition .3s all ease-in-out
                z-index 4
        &:hover
            .image
                img
                    transform scale(1.1)
                .overlay
                    display flex
        a
            text-decoration none
            .title
            .price
            .options
                display block
                width 100%


            .title
                margin-top 8px
            .title
                display block
                font-size 1.2em
                overflow hidden
                white-space nowrap
                text-overflow ellipsis
                color #111111
                width 100%
            .price
                font-size 1.4em
                font-weight bold
                color #111111
                margin-top 4px
